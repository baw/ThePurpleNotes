<div class="row">
  <div class="col-xs-12">
    <div class="row">
      <div class="col-xs-4 col-xs-offset-4">
        <div class="row">
          <div class="search-container">
            <div class="input-group col-md-12">
              <input type="text"
                     class="search-query form-control"
                     placeholder="Search"
                     id="search">
              <span class="input-group-btn">
                <button class="btn btn-danger" type="button">
                  <span class="glyphicon glyphicon-search"></span>
                </button>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="leftSidebar col-xs-3">
        <div class="notebooks"></div>
        <div class="tags"></div>
      </div>

      <div class="notes col-xs-3"></div>
      <div class="noteView col-xs-6"></div>
    </div>
  </div>
</div>

<script type="javascript/data" id="bootstrapped-data">
<%= render(partial: "api/bootstrapping.json.jbuilder",
           locals: { notebooks: @notebooks, taggings: @taggings }).html_safe %>
</script>

<script>
$(function(){
  Evernote.initialize(
    $(".notebooks"),
    $(".notes"),
    $(".noteView"),
    $(".tags"),
    $("#bootstrapped-data"),
    $("#search")
  );
});
</script>